  <script>
    function detectLanguage() {
      const lang = navigator.language || navigator.userLanguage; 
      const langCode = lang.toLowerCase();
      let targetId = 'lang-en';

      if (langCode.startsWith('ja')) {
        targetId = 'lang-ja';
      } else if (langCode.startsWith('de')) {
        targetId = 'lang-de';
      } else if (langCode.startsWith('fr')) {
        targetId = 'lang-fr';
      } else if (langCode.startsWith('es')) {
        targetId = 'lang-es';
      } else if (langCode.startsWith('ko')) {
        targetId = 'lang-ko';
      } else if (langCode === 'zh-tw' || langCode === 'zh-hk' || langCode === 'zh-hant') {
        targetId = 'lang-zh-hant';
      } else if (langCode.startsWith('zh')) {
        targetId = 'lang-zh-hans';
      }

      document.querySelectorAll('.card').forEach(el => {
        el.classList.remove('active');
      });
      
      const targetEl = document.getElementById(targetId);
      if (targetEl) {
        targetEl.classList.add('active');
      } else {
        document.getElementById('lang-en').classList.add('active');
      }
    }

    function showEnglish() {
      document.querySelectorAll('.card').forEach(el => el.classList.remove('active'));
      document.getElementById('lang-en').classList.add('active');
      window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    document.addEventListener('DOMContentLoaded', detectLanguage);
  </script>
